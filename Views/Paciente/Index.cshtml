@{
    ViewData["Title"] = "Pacientes";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 bg-light p-5 rounded shadow-sm">
            <h1 class="mb-4 text-center">Estás en tu página de pacientes</h1>
            <h4 class="mb-4 text-center text-muted">Aquí podrás crear nuevos pacientes</h4>

            <form asp-controller="Pacientes" asp-action="CreatePaciente" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre del paciente</label>
                    <input type="text" name="nombre" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="apellido" class="form-label">Apellido del paciente</label>
                    <input type="text" name="apellido" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="dni" class="form-label">DNI del paciente</label>
                    <input type="text" name="dni" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="telefono" class="form-label">Teléfono del paciente</label>
                    <input type="tel" name="telefono" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email del paciente</label>
                    <input type="email" name="email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="direccion" class="form-label">Dirección del paciente</label>
                    <input type="text" name="direccion" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="cliente" class="form-label">Seleccione el cliente</label>
                    <select name="cliente" id="cliente" class="form-select">
                        <option value="">-- Seleccione el cliente --</option>
                        @foreach (var cliente in ViewBag.listaClientes)
                        {
                            <option value="@cliente.Id">@cliente.Nombre</option>
                        }
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Crear paciente</button>
                </div>

                <div class="mt-3 text-center">
                    <p id="resultado" class="text-muted">Resultado</p>
                </div>
            </form>
        </div>
    </div>
</div>